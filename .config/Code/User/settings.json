{
  // Настройки редактора
  "editor.quickSuggestions": {
    "comments": true,
    "strings": true,
    "other": true
  },
  "editor.accessibilitySupport": "off",
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.colorDecorators": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.folding": true,
  "editor.foldingStrategy": "auto",
  "editor.fontFamily": "Iosevka",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.lineHeight": 1.9,
  "editor.lineNumbers": "on",
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.mouseWheelScrollSensitivity": 4,
  "editor.parameterHints.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.horizontalScrollbarSize": 5,
  "editor.selectionHighlight": false,
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "inline",
  "editor.tabCompletion": "on",
  "editor.tabSize": 10,
  "editor.wordWrap": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.hover.enabled": true,
  "editor.lightbulb.enabled": "off",
  "editor.stickyScroll.enabled": false,
  "editor.suggestFontSize": 13,
  "editor.suggestLineHeight": 27,
  "editor.glyphMargin": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.scrollbar.verticalScrollbarSize": 5,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "breadcrumbs.enabled": false,
  
  // Настройки интерфейса
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Ayu Mirage",
  "workbench.editor.showIcons": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.iconTheme": "symbols",
  "workbench.layoutControl.enabled": false,
  "workbench.panel.defaultLocation": "bottom",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "workbench.tree.indent": 16,
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.colorCustomizations": {
    "inlineparameters.annotationBackground": "#282A3600",
    "inlineparameters.annotationForeground": "#7b82af",
    "scrollbar.shadow": "#24292e00"
  },
  
  // Настройки терминала
  "terminal.integrated.fontFamily": "Iosevka",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.lineHeight": 1.3,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "right",
  
  // Настройки Git
  "git.enableCommitSigning": true,
  "git.autofetch": true,
  "git.decorations.enabled": false,
  
  // Настройки поиска
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**debug": true,
    "**/package-lock.json": true,
    "**/.next": true,
    "**/data": true
  },
  
  // Настройки файлов
  "files.restoreUndoStack": false,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/**.moc": true,
    "**/**.o": true,
    "**/moc_**.cpp": true,
    "**/moc_**.h": true,
    "**/qrc_**.cpp": true,
    "**/**.pyc": true
  },
  
  // Настройки отладки
  "debug.toolBarLocation": "commandCenter",
  "debug.enableStatusBarColor": false,
  "debug.console.fontFamily": "Iosevka",
  "debug.disassemblyView.showSourceCode": false,

  // Настройки SCM
  "scm.diffDecorations": "none",
  "scm.showIncomingChanges": "always",
  "scm.showOutgoingChanges": "always",

  // Настройки анимации
  "animations.Install-Method": "Apc Customize UI++",

  // Настройки окна
  "window.menuBarVisibility": "compact",
  "window.title": " ",
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "window.density.editorTabHeight": "default",
  "window.zoomLevel": 3,
  "window.customTitleBarVisibility": "auto",

  // Настройки APC
  "apc.electron": {
    "backgroundColor": "#00000000",
    "frame": false,
    "vibrancy": "fullscreen-ui",
    "visualEffectState": "active",
    "titleBarStyle": "hidden",
    "trafficLightPosition": {
      "x": 15,
      "y": 14
    }
  },
  "apc.sidebar.titlebar": {
    "height": -20,
    "fontSize": -10
  },
  "apc.stylesheet": {
    ".tabs-container": "margin-bottom: 10px;"
  },
  "apc.menubar.compact": true,

  // Настройки CMake
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.showOptionsMovedNotification": false,

  // Настройки GitLens
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.blame.line.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "pullRequests",
    "tags"
  ],
  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "repositories": false,
    "searchAndCompare": false,
    "launchpad": true
  },

  // Настройки темы
  "theme-changer.settings.theme": "Dynamite",
  "theme-changer.settings.colors": [],
  "editor.guides.indentation": false
}
